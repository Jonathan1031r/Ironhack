<!DOCTYPE html>
<html>
<head>
	<title>Edit Time Entries</title>
</head>
<body>

<center><h2>Time Tracking Tool</h2></center>

<%= form_for [@my_project, @my_entry] do |f| %>
	<%= f.label :hours %>
	<%= f.number_field :hours, size: 4 %> 
	<br>
	<%= f.label :minutes %>
	<%= f.number_field :minutes, size: 4%>
	<br>
	<%= f.label :date %>
	<%= f.date_field :date, size: 4 %>
	<br>
	<%= f.label :comments %>
	<%= f.text_field :comments %>
	<br>
	<%= f.button "Save" %>

	<%= link_to 'Cancel', project_time_entries_path(@my_project) %>

<% end %>

</body>
</html>